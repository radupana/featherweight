<?xml version="1.0" encoding="utf-8"?>
<!--
   Backup rules for Featherweight app
   See https://developer.android.com/guide/topics/data/autobackup
   Note: This file is ignored for devices older than API 31
   See https://developer.android.com/about/versions/12/backup-restore
-->
<full-backup-content>
    <!-- Exclude all databases to prevent data corruption after reinstall -->
    <exclude domain="database" />

    <!-- Exclude cache and temporary files -->
    <exclude domain="cache" />

    <!-- Exclude all external files -->
    <exclude domain="external" />

    <!-- Exclude root private files -->
    <exclude domain="root" />

    <!-- Only backup app_settings.xml from shared preferences -->
    <!-- This implicitly excludes auth_prefs.xml and Firebase auth preferences -->
    <include domain="sharedpref" path="app_settings.xml" />
</full-backup-content>