<?xml version="1.0" encoding="utf-8"?>
<!--
   Data extraction rules for Featherweight app (Android 12+)
   See https://developer.android.com/about/versions/12/backup-restore#xml-changes
   for details.
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude all databases to prevent data corruption after reinstall -->
        <exclude domain="database" />

        <!-- Exclude cache and temporary files -->
        <exclude domain="cache" />

        <!-- Exclude all external files -->
        <exclude domain="external" />

        <!-- Exclude root private files -->
        <exclude domain="root" />

        <!-- Only backup app_settings.xml from shared preferences -->
        <!-- This implicitly excludes auth_prefs.xml and Firebase auth preferences -->
        <include domain="sharedpref" path="app_settings.xml" />
    </cloud-backup>

    <device-transfer>
        <!-- For device-to-device transfer, include databases and all sharedprefs except auth -->
        <include domain="database" />
        <include domain="sharedpref" />
        <exclude domain="cache" />
        <exclude domain="external" />
    </device-transfer>
</data-extraction-rules>